<?xml version='1.0' encoding='utf-8'?>
<widget id="fr.grafikart.weather" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Mon Appli Meteo</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="sebastien@csebdesign.com " href="http://dev.csebdesign.com">
        Sebastien.C design
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="org.apache.cordova.geolocation" spec="^0.3.6" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="android-targetSdkVersion" value="20" />
    <engine name="android" spec="^6.2.3" />
</widget>
